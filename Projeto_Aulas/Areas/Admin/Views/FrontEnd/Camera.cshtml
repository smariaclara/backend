@section scripts {
    <script src="~/js/camera.js"></script>
}
<h1>Utilizando câmeras</h1>
<style>
    .video {
        width: 400px;
        height: 200px;
    }

    .foto {
        margin: 5px;
        cursor: pointer;
    }

    .foto:hover {
        transform: scale(1.2);
        transition: transform 0.2s;
    }
</style>

<h3>Captura de Câmera</h3>
<video class="video" autoplay></video>
<button class="btn btn-primary botaoCamera">Capturar</button>
<canvas class="canvas d-none" width="400" height="200"></canvas>
<div class="fotos d-flex flex-wrap"></div>